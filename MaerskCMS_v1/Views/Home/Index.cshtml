@{
    ViewBag.Title = "Home Page | Maersk Line CMS";
}

@model MaerskCMS_v1.Models.MainPageViewModel

<div class="jumbotron">
    <h1>Welcome to Maersk Line Container Management System</h1>
    <p class="lead">The solution of managing the containers, reduction of overall supply chain costs and the efficient way to manage logistics. </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Maersk Line CMS is a powerful system that lets the agent to manage the containers easily, effectively and efficiently. <br />To begin, login as an agent or sign up to get approval from the Maersk Admin.
        </p>
        <p><a class="btn btn-primary btn-lg" href="/Account/AgentSignUp">Sign up to be agent &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Shipping Schedule</h2>
        <p>
            Maersk Line CMS offers the best convience of finding the available schedule for shipping right here. Choose the departure and destination to begin down below.
        </p>
        @using (Html.BeginForm("", "", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.POD)
                @Html.DropDownListFor(model => model.POD, new SelectList("", "A", "B", "C"), new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.POD, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.POA)
                @Html.DropDownListFor(model => model.POA, new SelectList("", "A", "B", "C"), new { @class = "form-control", @disabled=true})
                @Html.ValidationMessageFor(model => model.POA, "", new { @class = "text-danger" })
            </div>
            <div class="form-row">
                <button type="submit" class="btn btn-primary col-sm-5" id="loginbtn">Check</button>
                <button type="reset" class="btn btn-dark col-sm-5 col-lg-offset-1" id="resetbtn">Reset</button>
            </div>
        }
    </div>
    <div class="col-md-4">
        <h2>Shipment Tracking</h2>
        <p>Enter the shipment number to track your shipment details. </p>
        @using (Html.BeginForm("", "", FormMethod.Post))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ShipmentID)
                @Html.TextBoxFor(model => model.ShipmentID, new { @class = "form-control", @placeholder = "Enter Shipment ID Here (E.g. 4123456789)" })
                @Html.ValidationMessageFor(model => model.ShipmentID, "", new { @class = "text-danger" })
            </div>
            <div class="form-row">
                <button type="submit" class="btn btn-primary col-sm-5" id="loginbtn">Track</button>
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <h2>About CMS</h2>
        <p>
            Learn more about what CMS can bring the world leader of container shipping company to the next height.
        </p>
        <p><a class="btn btn-primary btn-lg" href="/Home/About">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-6">
        <h2>Contact Us</h2>
        <p>We care about your experience on our Maersk CMS portal experience. Do contact us if you have any doubt. </p>
        <p><a class="btn btn-primary btn-lg" href="/Home/Contact">More &raquo;</a></p>
    </div>
</div>